@model Hospital_System.Viewmodel.Allview

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #343a40;
        }

        .link-container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 20px;
            color: inherit;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 220px;
            height: 170px;
            margin: 10px; /* Add margin for spacing */
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

        .link-container:hover {
            background-color: #6baef6;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .icon {
            font-size: 36px;
            margin-bottom: 15px;
        }

        /* Icon colors */
        #tab1 .icon { color: #007bff; }    /* Departments */
        #tab2 .icon { color: #28a745; }    /* Doctors */
        #tab3 .icon { color: #dc3545; }    /* Patients */
        #tab4 .icon { color: #ffc107; }    /* Ambulances */
        #tab5 .icon { color: #17a2b8; }    /* Active Appointments */
        #tab6 .icon { color: #6c757d; }    /* Pending Appointments */
        #tab7 .icon { color: #e83e8c; }    /* Medicines */
        #tab8 .icon { color: #fd7e14; }    /* Drivers */

        .count {
            font-size: 28px;
            color: #343a40;
            margin: 10px 0;
        }

        .tag {
            font-weight: 900;
            color: blue;
        }

        /* Layout Styles */
        .dashboard {
            display: flex;
            flex-wrap: wrap; /* Allow items to wrap to the next line */
            justify-content: center; /* Center items */
            padding: 20px;
        }

        media (max-width: 768px) {
            .link-container {
                width: 150px; /* Adjust width for smaller screens */
                height: 150px; /* Adjust height for smaller screens */
            }
            .count {
                font-size: 24px; /* Reduce font size */
            }
        }

        media (max-width: 480px) {
            .link-container {
                width: 100%; /* Make containers full width on mobile */
                height: auto; /* Allow height to adjust automatically */
            }
            .icon {
                font-size: 30px; /* Adjust icon size for mobile */
            }
            .count {
                font-size: 20px; /* Further reduce font size */
            }
        }
    </style>
</head>
<body>
    <div class="dashboard">
        @TempData["UserName"]

        <div id="tab1" class="link-container">
            <a href="#" class="link">
                <div class="icon">
                    <i class="fa fa-building"></i>
                </div>
                <p class="count">@Model.DepartmentCount</p>
                <span class="tag">Departments</span>
            </a>
        </div>

        <div id="tab2" class="link-container">
            <a href="Doc" class="link">
                <div class="icon">
                    <i class="fa fa-user-md"></i>
                </div>
                <p class="count">@Model.DoctorCount</p>
                <span class="tag">Doctors</span>
            </a>
        </div>

        <div id="tab3" class="link-container">
            <a href="#" class="link">
                <div class="icon">
                    <i class="fa fa-user"></i>
                </div>
                <p class="count">@Model.PatientCount</p>
                <span class="tag">Patients</span>
            </a>
        </div>

        <div id="tab4" class="link-container">
            <a href="Ambulanceses" class="link">
                <div class="icon">
                    <i class="fa fa-ambulance"></i>
                </div>
                <p class="count">@Model.AmbulanceCount</p>
                <span class="tag">Ambulances</span>
            </a>
        </div>

        <div id="tab5" class="link-container">
            <a href="#" class="link">
                <div class="icon">
                    <i class="fa fa-calendar-check"></i>
                </div>
                <p class="count">@Model.ActiveAppointmentsCount</p>
                <span class="tag">Active Appointments</span>
            </a>
        </div>

        <div id="tab6" class="link-container">
            <a href="#" class="link">
                <div class="icon">
                    <i class="fa fa-calendar-times"></i>
                </div>
                <p class="count">@Model.PendingAppointmentsCount</p>
                <span class="tag">Pending Appointments</span>
            </a>
        </div>

        <div id="tab7" class="link-container">
            <a href="medicals" class="link">
                <div class="icon">
                    <i class="fa fa-capsules"></i>
                </div>
                <p class="count">@Model.MedicineCount</p>
                <span class="tag">Medicines</span>
            </a>
        </div>

        <div id="tab8" class="link-container">
            <a href="Drive" class="link">
                <div class="icon">
                    <i class="fa fa-car"></i>
                </div>
                <p class="count">@Model.DriverCount</p>
                <span class="tag">Drivers</span>
            </a>
        </div>
    </div>
</body>
</html>
