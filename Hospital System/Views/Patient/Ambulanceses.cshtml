@model Hospital_System.Viewmodel.Allview

@{
    ViewBag.Title = "Ambulances";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>@ViewBag.Title</title>

    <script>
        function Back() {
            window.location.href = "Dashboard";
        }
    </script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light background for contrast */
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff; /* White background for content */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #343a40; /* Darker text for better contrast */
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px; /* Add space above the table */
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #dee2e6;
            transition: background-color 0.2s;
        }

        th {
            background-color: #007bff; /* Primary color for header */
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Light gray for even rows */
        }

        tr:hover {
            background-color: #b1c7ef; /* Light cyan highlight on hover */
        }

        /* Back icon styles */
        .back-icon {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            cursor: pointer; /* Pointer cursor for clickability */
            color: dodgerblue;
        }

        .back-icon i {
            font-size: 40px;
        }

        .back-icon span {
            font-size: 20px;
            margin-left: 8px;
            font-weight: bold; /* Bold text for emphasis */
        }

        /* Responsive styling */
        media (max-width: 600px) {
            .back-icon i {
                font-size: 30px;
            }
            .back-icon span {
                font-size: 16px;
            }
            th, td {
                padding: 10px;
                font-size: 14px; /* Adjust table font size */
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div>
            <a href="javascript:void(0);" onclick="Back()" class="back-icon">
                <i class="fas fa-arrow-circle-left"></i>

            </a>
            <h2>List of Ambulances</h2>
        </div>

        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>AmbulanceId</th>
                        <th>AmbulanceStatus</th>
                        <th>AmbulanceDriver</th>
                        <th>AmbulanceDriverId</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ambulance in Model.ambulances)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => ambulance.Id)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.Name)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.AmbulanceId)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.AmbulanceStatus)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.AmbulanceDriver)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.AmbulanceDriverId)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
