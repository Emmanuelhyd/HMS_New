@model Hospital_System.Viewmodel.Allview

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }

        .navbar {
            background-color: blue; /* Dark gray navbar */
        }

        .navbar-nav .nav-link {
            color: #ffffff; /* White text for navbar links */
        }

        .dropdown-item {
            color: #343a40; /* Dark gray for dropdown items */
        }

            .dropdown-item:hover {
                background-color: #007bff; /* Blue hover effect */
                color: #ffffff; /* White text on hover */
            }

        .dropdown-menu {
            display: none; /* Hide dropdown by default */
        }

        .dropdown:hover .dropdown-menu {
            display: block; /* Show dropdown on hover */
        }

        .dropdown-menu {
            display: none;
            transition: all 0.3s ease; /* Smooth transition */
        }

        .dropdown:hover .dropdown-menu {
            display: block;
            opacity: 1; /* Ensure it is visible */
        }
    </style>
    <script>
    document.getElementById('logout').onclick = function() {
        // Add any logout logic here (e.g., clear session, token, etc.)
        localStorage.removeItem('userToken'); // Example of clearing a token

        // Redirect to the Login action
        window.location.href = '@Url.Action("Login", "Patient")'; // Make sure this generates the correct URL
    };
    </script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <nav class="navbar navbar-expand-lg">
            @*<button id="logout" style="margin-left: 88%; position: absolute; font-size: small; font-weight: 700; border-radius: 5px; color: black;">
            LogOut
        </button>*@


            
            @Html.ActionLink("LogOut", "Login", "Patient", null, new { @id = "logout", @style = "margin-left: 88%; position: absolute; font-size: small; font-weight: 700; border-radius: 5px; color: black; background-color: lightgray; padding: 10px; text-decoration: none;" })

            @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>*@
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if (Model?.Menus != null && Model.Menus.Any())
                    {
                        foreach (var item in Model.Menus.Where(m => m.ParentId == null))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="@item.Url" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    @item.Name
                                </a>
                                @if (Model.Menus.Any(x => x.ParentId == item.Id))
                                {
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        @foreach (var subItem in Model.Menus.Where(x => x.ParentId == item.Id))
                                        {
                                            <a class="dropdown-item" href="@subItem.Url">@subItem.Name</a>
                                        }
                                    </div>
                                }
                            </li>
                        }
                    }
                </ul>
            </div>
        </nav>
    }

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
